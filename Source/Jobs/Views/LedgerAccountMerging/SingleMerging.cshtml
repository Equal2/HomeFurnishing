@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@ViewBag.LedgerAccountTypeId


@using (Html.BeginForm("SingleMergingPost", "LedgerAccountMerging", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <input type="hidden" name="id" value="@ViewBag.id" />
    
    
    <div class="panel panel-default">
        <div class="panel-heading">

            <h3>
                <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"> <span class="glyphicon glyphicon-export black"></span>Ledger Account Merging</span>
              
            </h3>

            <hr style="margin-top:0px;margin-bottom:0px" />

            <div class="panel-info">
                <h4 style="padding:5px 0 0 0;margin:0px">
                    @Html.ActionLink(" ", " ", " ", null, new { @class = "glyphicon glyphicon-refresh toolbar", @title = "Refresh Page", @data_toggle = "tooltip", @id = "RefreshPage" })
                    @Html.ActionLink(" ", "Import", "LedgerAccountMerging", null, new { @class = "glyphicon glyphicon-import toolbar right", @title = "Import", @data_toggle = "tooltip" })
                </h4>
            </div>

        </div>
        <div class="panel-info" style="padding-left:15px">
            <div class="form-horizontal">

                
                <h4 class="black"></h4><p>
                    <table class="table table-responsive table-hover" style="max-width:60%">
                        <tr style="border-bottom:thin solid #dbd1d1" >
                            <td>
                                Merging Ledger Account
                            </td>
                            <td colspan="2" style="width:300px">
                                <input class="form-control required" data-val="true" id="MergingLedgerAccountId" name="MergingLedgerAccountId" type="text">
                            </td>
                        </tr>

                        <tr style="border-bottom:thin solid #dbd1d1" >
                            <td>
                                Main Ledger Account
                            </td>
                            <td colspan="2" style="width:300px">
                                <input class="form-control required" data-val="true" id="MainLedgerAccountId" name="MainLedgerAccountId" type="text">
                            </td>
                        </tr>
                    </table>
                </p>

                <div class="form-group">
                    @*@Html.Label("", "Select File", new { @class = "control-label file-input-button" })*@
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="submit" value="Proceed" class="btn btn-primary fileinput-button" id="submit" style="width: 90px; background-color: #2980b9" />
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    CustomSelectFunction($("#MergingLedgerAccountId"), '/ComboHelpList/GetLedgerAccounts', '/ComboHelpList/SetSingleLedgerAccount', ' ', false, 0);
    CustomSelectFunction($("#MainLedgerAccountId"), '/ComboHelpList/GetLedgerAccounts', '/ComboHelpList/SetSingleLedgerAccount', ' ', false, 0);
 </script>